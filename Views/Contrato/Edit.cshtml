@model Intikonex_web1.Models.contrato
@using Intikonex_web1.Models

@{
    ViewBag.Title = "Contrato - Editar";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    <link href="~/Content/General.css" rel="stylesheet" />
    <script src="~/Scripts/Dashboard.js"></script>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h1 style="text-align:center">EDICIÓN DEL CONTRATO</h1>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)
    <table border="0" class="Listado">
        <tr>
            <th style="border-style: inset"><label>Nombre*</label></th>
            <th style="border-style: inset"><label>Descripción*</label></th>
        </tr>
        <tr>
            <td>
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", placeholder = "Nombre del contrato", required = "", style = "width:50%;background-color: cornsilk" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </td>
            <td>
                @Html.TextAreaFor(model => model.Descripción, new { htmlAttributes = new { @class = "form-control", placeholder = "Redacte una breve descripción del contrato", required = "", style = "width:100%;background-color: cornsilk" } })
                @Html.ValidationMessageFor(model => model.Descripción, "", new { @class = "text-danger" })
            </td>
        </tr>
    </table>
    <table>
        <tr>
            <td>
                <a class="btn-material" style="width:100%" href="/Contrato/Index">
                    <img class="icon" style="width:50px; height:50%" src="/Image/Iconos/Acciones/Boton_volver.png">
                </a>
            </td>
            <td>
                <button class="btn-material" style="width: 100%; border-style: hidden; cursor: pointer; background-color:white" type="submit">
                    <img class="icon" style="width:50px; height:50%" src="~/Image/Iconos/Acciones/Boton_guardar.png">
                </button>
            </td>
        </tr>
    </table>
}

