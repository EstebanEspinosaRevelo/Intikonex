@model Intikonex_web1.Models.Hoja_de_asistencia

@{
    ViewBag.Title = "Hoja de asistencia - Eliminar";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    <link href="~/Content/General.css" rel="stylesheet" />
    <script src="~/Scripts/Dashboard.js"></script>
}

<div>
    <h1 style="background-color:darkred; font-size:200%">¿Estás seguro de que quieres eliminar esta hoja de asistencia?</h1>
    <hr />
    <table class="Listado">
        <tr>
            <th>
                <label>Nombre de la empresa</label>
            </th>
            <td>
                @Html.DisplayFor(model => model.empresa.razon_social)
            </td>
        </tr>
        <tr>
            <th>
                <label>CIF</label>
            </th>
            <td>
                @Html.DisplayFor(model => model.empresa.cif)
            </td>
        </tr>
        <tr>
            <th>
                <label>Dirección</label>
            </th>
            <td>
                @Html.DisplayFor(model => model.empresa.direccion)
            </td>
        </tr>
        <tr>
            <th>
                <label>Persona de contacto</label>
            </th>
            <td>
                @Html.DisplayFor(model => model.trabajador.nombre)
                @Html.DisplayFor(model => model.trabajador.apellidos)
            </td>
        </tr>
        <tr>
            <th>
                <label>Cargo</label>
            </th>
            <td>
                @Html.DisplayFor(model => model.trabajador.cargo)
            </td>
        </tr>
        <tr>
            <th>
                <label>Técnico asignado</label>
            </th>
            <td>
                @Html.DisplayFor(model => model.usuario.nombre)
                @Html.DisplayFor(model => model.usuario.apellidos)
            </td>
        </tr>
        <tr>
            <th>
                <label>Fecha de asistencia</label>
            </th>
            <td>
                @Html.DisplayFor(model => model.fecha_asistencia)
            </td>
        </tr>
        <tr>
            <th>
                <label>Hora de llegada | Hora de Salida</label>
            </th>
            <td>

                @Html.DisplayFor(model => model.hora_inicio)|
                @Html.DisplayFor(model => model.hora_fin)
            </td>
        </tr>
        <tr>
            <th>
                <label>Tipo de Contrato</label>
            </th>
            <td>

                @Html.DisplayFor(model => model.contrato.nombre)
            </td>
        </tr>
        <tr>
            <th>
                <label>Trabajos realizados</label>
            </th>
            <td>

                @Html.DisplayFor(model => model.trabajo_realizado)
            </td>
        </tr>
        <tr>
            <th>
                <label>Observaciones del cliente</label>
            </th>
            <td>

                @Html.DisplayFor(model => model.observaciones_cliente)
            </td>
        </tr>
    </table>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <table>
        <tr>
            <td>
                <a class="btn-material" style="width:100%" href="/Hoja_de_asistencia/Index">
                    <img class="icon" style="width:50px; height:50%" src="/Image/Iconos/Acciones/Boton_volver.png">
                </a>
            </td>
            <td>
                <button class="btn-material" style="width: 100%; border-style: hidden; cursor: pointer; background-color:white" type="submit" value="Delete">
                    <img class="icon" style="width:50px; height:50%" src="~/Image/Iconos/Acciones/Boton_eliminar.png">
                </button>
            </td>
        </tr>
    </table>

}