@model Intikonex_web1.Models.empresa

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    <link href="~/Content/General.css" rel="stylesheet" />
    <script src="~/Scripts/Dashboard.js"></script>
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h1 style="text-align:center">CREACIÓN DE UNA NUEVA EMPRESA</h1>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <br />

    <div style="text-align:center">
        <div class="form-group">
            <h4>Empresa*</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.razon_social, new { htmlAttributes = new { @class = "form-control", required = "", placeholder = "Empresa", style = "width:50%;background-color: cornsilk" } })
                @Html.ValidationMessageFor(model => model.razon_social, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <h4>Dirección*</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.direccion, new { htmlAttributes = new { @class = "form-control", required = "", placeholder = "C/ direccion ", style = "width:50% ;background-color: cornsilk" } })
                @Html.ValidationMessageFor(model => model.direccion, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <h4>CIF*</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.cif, new { htmlAttributes = new { @class = "form-control", placeholder = "B76365789", pattern = "[BbCcDdEeFfGgHhJjNnPpQqRrSsUuVvWw0-9]{9}", required = "", title = "El numero CIF consta de 9 caracteres", style = "width:50%;background-color: cornsilk" } })
                @Html.ValidationMessageFor(model => model.cif, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <h4>Teléfono</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.telefono, new { htmlAttributes = new { @class = "form-control", @type = "phone", placeholder = "123456789", pattern = "[0-9]{9}", title = "El numero de telefono consta de 9 números", style = "width:50%;background-color: cornsilk" } })
                @Html.ValidationMessageFor(model => model.telefono, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <h4>Correo electrónico</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @class = "form-control", @type = "email", placeholder = "correo@dominio.com", style = "width:50% ;background-color: cornsilk" } })
                @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <h4>Tipo de Contrato</h4>
            <div class="col-md-10">
                @Html.DropDownList("id_contrato", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_contrato, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <h4>Persona de Contacto</h4>
            <div class="col-md-10">
                @Html.DropDownList("id_trabajador", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_trabajador, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <h4>Técnico Asignado</h4>
            <div class="col-md-10">
                @Html.DropDownList("id_usuario", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_usuario, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <table>
        <tr>
            <td>
                <a class="btn-material" style="width:100%" href="/Home/Index">
                    <img class="icon" style="width:50px; height:50%" src="/Image/Iconos/Acciones/Boton_volver.png">
                </a>
            </td>
            <td>
                <button class="btn-material" style="width: 100%; border-style: hidden; cursor: pointer; background-color:white" type="submit" value="Create">
                    <img class="icon" style="width:50px; height:50%" src="~/Image/Iconos/Acciones/Boton_Crear.png">
                </button>
            </td>
        </tr>
    </table>
}