@model Intikonex_web1.Models.usuario

@{
    ViewBag.Title = "Usuario - Crear ";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    <link href="~/Content/General.css" rel="stylesheet" />
    <script src="~/Scripts/Dashboard.js"></script>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h1 style="text-align:center">CREACIÓN DE UN NUEVO USUARIO</h1>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <br />
    <div style="text-align:center">
        <div class="form-group">
            <h4>Nombre*</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", required = "", placeholder = "Nombre", style = "width:50%;background-color: cornsilk" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <br />
        <div class="form-group">
            <h4>Apellidos*</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.apellidos, new { htmlAttributes = new { @class = "form-control", required = "", placeholder = "Apellidos", style = "width:50%;background-color: cornsilk" } })
                @Html.ValidationMessageFor(model => model.apellidos, "", new { @class = "text-danger" })
            </div>
        </div>

        <br />
        <div class="form-group">
            <h4>Correo Electrónico*</h4>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.correo, new { @type = "email", placeholder = "correo@dominio.com", required = "", style = "width:50% ;background-color: cornsilk" })
                @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <h4>Documentación de identidad*</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.dni_nie_nif, new { htmlAttributes = new { @class = "form-control", required = "", placeholder = "B76365789", pattern = "[AaBbCcDdEeFfGgHhJjQqRrSsTtVvWwXxYyZz0-9]{9}", title = "La documentacion de identidad consta de 9 caracteres. Por favor, Introduzcalo correctamente", style = "width:50%;background-color: cornsilk" } })
                @Html.ValidationMessageFor(model => model.dni_nie_nif, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <h4>Teléfono</h4>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.telefono, new { @type = "phone", placeholder = "123456789", pattern = "[0-9]{9}", title = "El numero de telefono consta de 9 números", style = "width:50%;background-color: cornsilk" })
                @Html.ValidationMessageFor(model => model.telefono, "", new { @class = "text-danger" })
            </div>
        </div>

        <br />
        <div class="form-group">
            <h4>Dirección</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.direccion, new { htmlAttributes = new { @class = "form-control", placeholder = "C/ direccion", style = "width:50% ;background-color: cornsilk" } })
                @Html.ValidationMessageFor(model => model.direccion, "", new { @class = "text-danger" })
            </div>
        </div>


        <br />
        <div class="form-group">
            <h4>Permisos</h4>
            <div class="col-md-10">
                @Html.DropDownList("id_rol", null, htmlAttributes: new { })
                @Html.ValidationMessageFor(model => model.id_rol, "", new { @class = "text-danger" })
            </div>
        </div>


        <br />
        <div class="form-group">
            <h4>Contraseña</h4>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.password, new { type = "password", name = "Pass", placeholder = "Introduzca la contraseña", required = "", pattern = "[A-Za-z0-9#$%&_*.]{5,100}", title = "Debe tener mínimo 5 caracteres. Se recomienda utilizar minúsculas, mayúsculas, números y símbolos (#, $, %, &)" , @Value = "", style = "width:50% ;background-color: cornsilk" })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
            </div>
        </div>

        <br />
        <table>
            <tr>
                <td>
                    <a class="btn-material" style="width:100%" href="/Usuario/Index">
                        <img class="icon" style="width:50px; height:50%" src="/Image/Iconos/Acciones/Boton_volver.png">
                    </a>
                </td>
                <td>
                    <button class="btn-material" style="width: 100%; border-style: hidden; cursor: pointer; background-color:white" type="submit" value="Create">
                        <img class="icon" style="width:50px; height:50%" src="~/Image/Iconos/Acciones/Boton_Crear.png">
                    </button>
                </td>
            </tr>
        </table>
        </div>
        }
